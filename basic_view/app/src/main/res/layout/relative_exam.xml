<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">





    <TextView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#FFB9B3"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">


        <TextView
            android:id="@+id/lemontxt"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#FFF6A8"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#A5EAFF"
            android:layout_toRightOf="@+id/lemontxt"/>


    </RelativeLayout>


    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#DBFB8E"
        android:layout_alignParentBottom="true"/>

    <TextView
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:background="#BBE9FF"
    android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#FFE491"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#FF5C4E"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#FF4E3F"
        android:layout_centerVertical="true"/>



</RelativeLayout>